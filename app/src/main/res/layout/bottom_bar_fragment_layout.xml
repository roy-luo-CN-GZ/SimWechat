<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"

    >

    <LinearLayout
        android:id="@+id/item_1_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_1_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:src="@mipmap/wechat"
            android:scaleType="fitCenter"
            android:padding="3dp"

            />

        <TextView
            android:id="@+id/text_1_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center_horizontal|top"
            android:text="@string/bottom_bar_text_1"
            android:textSize="@dimen/my_bottom_bar_text_size"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_2_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_2_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:src="@mipmap/communication"
            android:scaleType="fitCenter"
            android:padding="3dp"

            />

        <TextView
            android:id="@+id/text_2_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center_horizontal|top"
            android:text="@string/bottom_bar_text_2"
            android:textSize="@dimen/my_bottom_bar_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_3_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_3_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:src="@mipmap/discover"
            android:scaleType="fitCenter"
            android:padding="3dp"

            />

        <TextView
            android:id="@+id/text_3_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center_horizontal|top"
            android:text="@string/bottom_bar_text_3"
            android:textSize="@dimen/my_bottom_bar_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_4_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_4_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:src="@mipmap/mine"
            android:scaleType="fitCenter"
            android:padding="3dp"

            />

        <TextView
            android:id="@+id/text_4_in_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center_horizontal|top"
            android:text="@string/bottom_bar_text_4"
            android:textSize="@dimen/my_bottom_bar_text_size"/>

    </LinearLayout>


</LinearLayout>